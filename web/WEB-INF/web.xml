<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- ################ S E S S I O N ################ -->
    <servlet>
        <servlet-name>SessionServlet</servlet-name>
        <servlet-class>leago.controller.SessionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>    

    <!-- ################ U S E R ################ -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>leago.controller.UserServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/register/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/settings/*</url-pattern>
    </servlet-mapping>
    
    <!-- ################ T O U R N A M E N T ################ -->
    <servlet>
        <servlet-name>TournamentServlet</servlet-name>
        <servlet-class>leago.controller.TournamentServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TournamentServlet</servlet-name>
        <url-pattern>/tournament/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>TournamentServlet</servlet-name>
        <url-pattern>/new/tournament/</url-pattern>
    </servlet-mapping>
    
    <!-- ################ T E A M ################ -->
    <servlet>
        <servlet-name>TeamServlet</servlet-name>
        <servlet-class>leago.controller.TeamServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/team/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/new/team/*</url-pattern>
    </servlet-mapping>
    
    <!-- T I M E O U T -->  
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- E R R O R -->  
    <error-page>
        <location>/error.jsp</location>
    </error-page>
</web-app>
